<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NoteApplication" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Widget.TextView" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <!--        <item name="android:fontFamily">@font/a_jannat_lt</item>-->
        <item name="android:textColor">@color/black</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textDirection">locale</item>
        <item name="android:textAlignment">gravity</item>
    </style>

    <style name="TextView.10spBold" parent="Widget.TextView">
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:textStyle">bold</item>

    </style>
    <style name="TextView.12spBold" parent="Widget.TextView">
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textStyle">bold</item>

    </style>
    <style name="TextView.14spBold" parent="Widget.TextView">
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:textStyle">bold</item>

    </style>
    <style name="TextView.10spRegularTextView" parent="Widget.TextView">
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="TextView.12spRegularTextView" parent="Widget.TextView">
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textStyle">normal</item>
    </style>



    <style name="editTextLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_marginTop">@dimen/_5sdp</item>
        <item name="android:textSize">@dimen/_15ssp</item>
        <item name="hintTextColor">@color/black</item>
        <item name="boxStrokeColor">@color/blue_700</item>
        <item name="boxStrokeErrorColor">@color/red_500</item>
        <item name="startIconTint">@color/black</item>
        <item name="endIconMode">clear_text</item>
        <item name="endIconTint">@color/black</item>
        <item name="boxStrokeWidthFocused">@dimen/_2sdp</item>

    </style>

</resources>